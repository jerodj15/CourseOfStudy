<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsScreen">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="@string/termTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <EditText
            android:id="@+id/termTitleET"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/startTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startDate"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="1" />

        <EditText
            android:id="@+id/startET"
            android:layout_width="160dp"
            android:layout_height="68dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/startDateButton"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:onClick="startDatePickPressed"
            android:text="@string/elipses"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/endTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endDate"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/endET"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/endDateButton"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:onClick="endDatePickPressed"
            android:text="@string/elipses"
            app:layout_column="2"
            app:layout_row="2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelButtonPressed"
            android:text="@string/cancelButton"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveButtonPressed"
            android:text="@string/saveButton"
            app:layout_column="1"
            app:layout_row="4" />

    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>