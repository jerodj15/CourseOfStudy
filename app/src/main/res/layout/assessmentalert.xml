<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
        android:id="@+id/assAlertTitleET"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/assAlertTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/assAlertDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startDate"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="1" />

        <EditText
            android:id="@+id/assAlertStartET"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/assAlertDateButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="@string/elipses"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/assAlertTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/assAlertTimeET"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName|time"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/assAlertOkayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/okay"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/assAlertTimeButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="@string/elipses"
            app:layout_column="2"
            app:layout_row="2" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>