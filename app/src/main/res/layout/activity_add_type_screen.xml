<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTypeScreen">

    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/typeTitleTV"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/typeTitleET"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/cancelTypeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelTypeButtonPressed"
            android:text="@string/cancelButton"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/saveTypeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveTypeButtonPressed"
            android:text="@string/saveButton"
            app:layout_column="1"
            app:layout_row="2" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>