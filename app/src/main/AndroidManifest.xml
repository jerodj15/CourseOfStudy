<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trialattemptone">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AssessmentAlertScreen"></activity>
        <activity android:name=".EditCourseScreen" />
        <activity android:name=".CourseAlertScreen" />
        <activity android:name=".NoteDetailsScreen" />
        <activity android:name=".AddTypeScreen" />
        <activity android:name=".AssessmentDetailsScreen" />
        <activity android:name=".AddNoteScreen" />
        <activity android:name=".AddAssignmentScreen" />
        <activity android:name=".CourseDetailsScreen" />
        <activity android:name=".CoursesScreen" />
        <activity android:name=".TermsScreen" />
        <activity android:name=".DatePicker" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>